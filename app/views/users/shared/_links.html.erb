<%- if controller_name != 'sessions' %>
  <div class="row mb-3">
    <%= link_to "Log in", new_session_path(resource_name), class: "btn btn-link btn-lg" %>
    <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-lg ml-auto active" %>
  </div>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class="row mb-3">
    <%= link_to "Log in", new_session_path(resource_name), class: "btn btn-lg active" %>
    <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-link btn-lg ml-auto" %>
  </div>
<% end -%>