<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-group' }) do |f| %>
  <%= devise_error_messages! %>

  <%= render "users/shared/links" %>
  <%= f.email_field :email, required: true, placeholder: 'Email', class: 'form-control form-borderless  mb-2' %>

  <br>
  <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', required: true, class: 'form-control form-borderless  mb-2' %>
  <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Password Confirmation', required: true, class: 'form-control form-borderless  mb-2' %>

  <%= f.submit "Sign up", class: 'btn btn-lg btn-block btn-primary text-uppercase font-weight-semibold mt-3' %>
<% end %>