<% if @user.user_profile %>
  <%= image_tag @user.user_profile.photo %>
  <h5>Name: <%= @user.full_name %></h5>
  <h5> <%= @user.user_profile.description %></h5>
  <%= link_to 'Edit your profile', edit_user_profile_path(current_user) %>

<% else %>
  <% if @user.id == current_user.id %>
    <h1>Your profile is not completed, you can start completing it here</h1>
    <%= link_to 'Complete your profile', new_user_profile_path(current_user) %>
  <% else %>
    <h1>Users profile is not completed yet</h1>
  <% end %>
<% end %>

<%= link_to 'Albums', user_albums_path(@user), class: 'btn btn-default' %>